    <profiles>
        <profile>
            <id>Prof_mysql</id>

            <properties>
                <db.type>mysql</db.type>
                <db.driver.class>com.mysql.jdbc.Driver</db.driver.class>
                <db.url>jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=UTF-8&amp;autoReconnect=true&amp;noAccessToProcedureBodies=true</db.url>
                <db.user>root</db.user>
                <db.password>root</db.password>
            </properties>
        </profile>
        <profile>
            <id>Prof_mongoDB</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <db.type>mongodb</db.type>
                <mongo.host>127.0.0.1</mongo.host>
                <mongo.port>27017</mongo.port>
                <mongo.database>mymongodb</mongo.database>
                <mongo.collection>file</mongo.collection>
            </properties>
        </profile>
